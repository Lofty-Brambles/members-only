extends layout 

block content 
	.sign.container 
		if (currentUser.member)
			.log.bad-cred-cover.container
				.bad-cred
					h2 Congratz! You are a admin!
					p To go back, #[a(href="/") click here!]
		else 
			img(src="./images/door-mat.png", alt="placeholder image")
			form(action="/admin", method="post") 
				h2 Admin form!
				if (error)
					p.error= error
				div.input-container 
					input#passcode(type="text", name="passcode", value="", required)
					label(for="passcode") 
						.text Passcode...
				button(type="submit") Submit the code!
	script.
		document.querySelectorAll("input").forEach(e => {
			e.addEventListener("keyup", () => {
				e.setAttribute("value", e.value);
			});
		});