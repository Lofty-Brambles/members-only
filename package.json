{
	"name": "members-only",
	"version": "1.0.0",
	"description": "",
	"main": "dist/index.js",
	"scripts": {
		"start": "node ./dist/index.js",
		"build": "rm -rf ./dist/* && tsc",
		"start:dev": "nodemon dist/index.js",
		"build:dev": "tsc --watch --preserveWatchOutput",
		"serve": "concurrently \"npm run build:dev\" \"tsc-alias -w\" \"npm run start:dev\"",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Lofty-Brambles/members-only.git"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Lofty-Brambles/members-only/issues"
	},
	"homepage": "https://github.com/Lofty-Brambles/members-only#readme",
	"dependencies": {
		"async": "^3.2.4",
		"bcryptjs": "^2.4.3",
		"compression": "^1.7.4",
		"debug": "~2.6.9",
		"dotenv": "^16.0.2",
		"express": "~4.16.1",
		"express-session": "^1.17.3",
		"express-validator": "^6.14.2",
		"helmet": "^6.0.0",
		"http-errors": "~1.6.3",
		"module-alias": "^2.2.2",
		"mongoose": "^6.6.2",
		"morgan": "~1.9.1",
		"passport": "^0.6.0",
		"passport-local": "^1.0.0",
		"pug": "2.0.0-beta11"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.+(ts)": [
			"eslint --fix",
			"prettier --write"
		]
	},
	"nodemonConfig": {
		"watch": [
			"src",
			"views"
		]
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/compression": "^1.7.2",
		"@types/debug": "^4.1.7",
		"@types/express": "^4.17.14",
		"@types/express-session": "^1.17.5",
		"@types/http-errors": "1.8.2",
		"@types/morgan": "^1.9.3",
		"@types/node": "^18.7.18",
		"@types/passport": "^1.0.11",
		"@types/passport-local": "^1.0.34",
		"@typescript-eslint/eslint-plugin": "^5.38.0",
		"@typescript-eslint/parser": "^5.38.0",
		"concurrently": "^7.4.0",
		"eslint": "^8.23.1",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-typescript": "^3.5.1",
		"eslint-plugin-import": "^2.26.0",
		"husky": "^8.0.0",
		"nodemon": "^2.0.20",
		"prettier": "^2.7.1",
		"tsc-alias": "^1.7.0",
		"typescript": "^4.8.3"
	}
}
